{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": false,
    "compilerOptions": {
      "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/types"]
    }
  }
}
